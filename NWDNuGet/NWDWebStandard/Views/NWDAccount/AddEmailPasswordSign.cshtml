@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http;
@using NWDWebRuntime.Configuration
@using NWDWebRuntime.Models
@using NWDWebRuntime.Tools
@using NWDWebStandard.Configuration
@using NWDWebStandard.Controllers
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model NWDWebRuntime.Models.NWDAccountSignAddEmailPassword

@using (Html.BeginForm(nameof(NWDAccountController.AddEmailPasswordSign), NWDAccountController.ASP_Controller()))
{
    @Html.AntiForgeryToken()
    if (@HttpContextAccessor.HttpContext != null)
    {
        @Html.Hidden(nameof(NWDAccountSignAddEmailPassword.AccountSignAddEmailPasswordController), NWDToolBox.GetController(@HttpContextAccessor.HttpContext))
        @Html.Hidden(nameof(NWDAccountSignAddEmailPassword.AccountSignAddEmailPasswordAction), NWDToolBox.GetAction(@HttpContextAccessor.HttpContext))
    }
  
    <div class="row min-vh-100 flex-center g-0">
        <div class="col-lg-8 py-3 position-relative">
            <img class="bg-auth-circle-shape" src="~/decorations/circles-1.png" alt="" width="250"><img class="bg-auth-circle-shape-2" src="~/decorations/circles-2.png" alt="" width="150">
            <div class="card overflow-hidden z-index-1">
                <div class="card-body p-0">
                    <div class="row g-0 h-100">
                        <div class="col-md-5 text-center bg-primary">
                            <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                                <div class="bg-holder bg-primary background-half-circle background-animated">
                                </div>
                                <div class="z-index-1 position-relative">
                                    <a class="link-light mb-3 font-sans-serif fs-1 d-inline-block fw-bolder" href="~/index.html">@NWDWebStandardConfiguration.KConfig.WebSiteShortName</a>
                                    <p class="opacity-75 text-white">@NWDWebStandardConfiguration.KConfig.SignHook</p>
                                </div>
                            </div>
                            <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                                <p class="mb-0 mt-4 mt-md-5 fs--1 fw-semi-bold text-white opacity-75">
                                    Read our <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="TermsOfService">terms of service</a> and <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="TermsAndConditions"> conditions</a>. <br />
                                    We respect your <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="PrivacyPolicy">privacy </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-7 d-flex flex-center">
                            <div class="p-4 p-md-5 flex-grow-1">
                                <h3>Add sign</h3>
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.AccountSignAddEmailPasswordEmail, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.AccountSignAddEmailPasswordEmail, new { @type="email",@class = "form-control", @placeholder = "email" })
                                        @Html.ValidationMessageFor(m => m.AccountSignAddEmailPasswordEmail, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    </div>
                                    <div class="row gx-2">
                                        <div class="mb-3 col-sm-6">
                                            @Html.LabelFor(m => m.AccountSignAddEmailPasswordPassword, new { @class = "form-label" })
                                            @Html.PasswordFor(m => m.AccountSignAddEmailPasswordPassword, new { @class = "form-control", @placeholder = "password" })
                                        </div>
                                        <div class="mb-3 col-sm-6">
                                            @Html.LabelFor(m => m.AccountSignAddEmailPasswordPasswordConfirm, new { @class = "form-label" })
                                            @Html.PasswordFor(m => m.AccountSignAddEmailPasswordPasswordConfirm, new { @class = "form-control", @placeholder = "confirm password" })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.AccountSignAddEmailPasswordPassword, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    @Html.ValidationMessageFor(m => m.AccountSignAddEmailPasswordPasswordConfirm, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                            <div class="mb-3 text-end">
                                <a class="btn btn-outline-secondary" asp-area="" asp-controller="@NWDAccountController.ASP_Controller()" asp-action="@nameof(NWDAccountController.Index)"> Cancel</a>
                                <button class="btn btn-primary" type="submit" id="@nameof(NWDAccountSignAddEmailPassword)_Submit" name="@nameof(NWDAccountSignAddEmailPassword)_Submit" disabled>Save</button>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>function @NWDAccountSignAddEmailPassword.K_JavaScriptFunction () {
        if (
            $('#@nameof(NWDAccountSignAddEmailPassword.AccountSignAddEmailPasswordEmail)').val().length != 0
            && $('#@nameof(NWDAccountSignAddEmailPassword.AccountSignAddEmailPasswordPassword)').val().length != 0
            && $('#@nameof(NWDAccountSignAddEmailPassword.AccountSignAddEmailPasswordPasswordConfirm)').val().length != 0
        ) {
            $('#@nameof(NWDAccountSignAddEmailPassword)_Submit').attr('disabled', false);
        }
        else {
            $('#@nameof(NWDAccountSignAddEmailPassword)_Submit').attr('disabled', true);
        }
    }
    $(document).ready(function () {
        $('#@nameof(NWDAccountSignAddEmailPassword)_Submit').attr('disabled', true);
        $('#@nameof(NWDAccountSignAddEmailPassword.AccountSignAddEmailPasswordEmail)').keyup(function () { @NWDAccountSignAddEmailPassword.K_JavaScriptFunction (); })
        $('#@nameof(NWDAccountSignAddEmailPassword.AccountSignAddEmailPasswordPassword)').keyup(function () { @NWDAccountSignAddEmailPassword.K_JavaScriptFunction (); })
        $('#@nameof(NWDAccountSignAddEmailPassword.AccountSignAddEmailPasswordPasswordConfirm)').keyup(function () { @NWDAccountSignAddEmailPassword.K_JavaScriptFunction (); })
    });</script>