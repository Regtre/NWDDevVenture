@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NWDWebRuntime.Configuration
@using NWDWebRuntime.Managers
@using NWDWebRuntime.Models
@using NWDWebRuntime.Tools
@using NWDWebStandard.Configuration
@using  NWDWebStandard.Controllers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@inject IHttpContextAccessor HttpContextAccessor

@{
    NWDPageStandard? tPageStandard = ViewData[nameof(NWDPageStandard)] as NWDPageStandard;
}
@if (NWDAccountWebManager.AccountIsConnected(@HttpContextAccessor.HttpContext) == true)
{
    @model NWDWebRuntime.Models.NWDAccountSignModifyLoginPassword
    @using (Html.BeginForm(nameof(NWDAccountController.ModifyLoginPassword), NWDAccountController.ASP_Controller()))
    {
        @Html.AntiForgeryToken()
        if (@HttpContextAccessor.HttpContext != null)
        {
            @Html.Hidden(nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordController), NWDToolBox.GetController(@HttpContextAccessor.HttpContext))
            @Html.Hidden(nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordAction), NWDToolBox.GetAction(@HttpContextAccessor.HttpContext))
        }
        @Html.AntiForgeryToken()
        <div class="row min-vh-100 flex-center g-0">
            <div class="col-lg-8 py-3 position-relative">
                <img class="bg-auth-circle-shape" src="~/decorations/circles-1.png" alt="" width="250"><img class="bg-auth-circle-shape-2" src="~/decorations/circles-2.png" alt="" width="150">
                <div class="card overflow-hidden z-index-1">
                    <div class="card-body p-0">
                        <div class="row g-0 h-100">
                            <div class="col-md-5 text-center bg-primary">
                                <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                                    <div class="bg-holder background-half-circle  background-animated">
                                    </div>
                                    <div class="z-index-1 position-relative">
                                        <a class="link-light mb-3 font-sans-serif fs-1 d-inline-block fw-bolder" href="~/index.html">@NWDWebStandardConfiguration.KConfig.WebSiteShortName</a>
                                    </div>
                                </div>
                                <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                                    <p class="mb-0 mt-4 mt-md-5 fs--1 fw-semi-bold text-white opacity-75">
                                        Read our <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="TermsOfService">terms of service</a> and <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="TermsAndConditions"> conditions</a>. <br />
                                        We respect your <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="PrivacyPolicy">privacy </a>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-7 d-flex flex-center">
                                <div class="p-4 p-md-5 flex-grow-1">
                                    <div class="row flex-between-center">
                                        <div class="col-auto">
                                            <h3>Modify sign</h3>
                                        </div>
                                    </div>
                                        <div class="mb-3">
                                        @* 
                                        <p class = "form-label">@Model.AccountSignModifyLoginPassword_Name</p>
                                             @Html.HiddenFor(m => m.AccountSignModifyLoginPassword_Name)
                                            *@ 
                                        </div>
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.AccountSignModifyLoginPasswordLogin, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.AccountSignModifyLoginPasswordLogin, new { @class = "form-control", placeholder = "actual login" })
                                        @Html.ValidationMessageFor(m => m.AccountSignModifyLoginPasswordLogin, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.AccountSignModifyLoginPasswordPassword, new { @class = "form-label" })
                                        @Html.PasswordFor(m => m.AccountSignModifyLoginPasswordPassword, new { @class = "form-control", placeholder = "actual password" })
                                        @Html.ValidationMessageFor(m => m.AccountSignModifyLoginPasswordPassword, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    </div>


                                    <div class="position-relative mt-4">
                                        <hr class="bg-300">
                                        <div class="divider-content-center">change for</div>
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.AccountSignModifyLoginPasswordNewLogin, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.AccountSignModifyLoginPasswordNewLogin, new { @class = "form-control", placeholder = "new login" })
                                        @Html.ValidationMessageFor(m => m.AccountSignModifyLoginPasswordNewLogin, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    </div>
                                    <div class="row gx-2">
                                        <div class="mb-3 col-sm-6">
                                            @Html.LabelFor(m => m.AccountSignModifyLoginPasswordNewPassword, new { @class = "form-label" })
                                            @Html.PasswordFor(m => m.AccountSignModifyLoginPasswordNewPassword, new { @class = "form-control", @placeholder = "new password" })
                                        </div>
                                        <div class="mb-3 col-sm-6">
                                            @Html.LabelFor(m => m.AccountSignModifyLoginPasswordNewPasswordConfirm, new { @class = "form-label" })
                                            @Html.PasswordFor(m => m.AccountSignModifyLoginPasswordNewPasswordConfirm, new { @class = "form-control", @placeholder = "new confirm password" })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.AccountSignModifyLoginPasswordNewPassword, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    @Html.ValidationMessageFor(m => m.AccountSignModifyLoginPasswordNewPasswordConfirm, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")

                                    <div class="mb-3 text-end">
                                            <a class="btn btn-outline-secondary" asp-area="" asp-controller="@NWDAccountController.ASP_Controller()" asp-action="@nameof(NWDAccountController.Index)"> Cancel</a>

                                            <button class="btn btn-primary" type="submit" id="@Html.Raw(nameof(NWDAccountSignModifyLoginPassword) + "_Submit")" name="@Html.Raw(nameof(NWDAccountSignModifyLoginPassword) + "_Submit")" disabled>@*<span class="far far fa-envelope"></span>*@ Save</button>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
<script>function @NWDAccountSignModifyLoginPassword.K_JavaScriptFunction () {
            if (
                $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordLogin)').val().length != 0
               && $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordPassword)').val().length != 0
               && $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordNewLogin)').val().length != 0
               && $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordNewPassword)').val().length != 0
               && $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordNewPasswordConfirm)').val().length != 0
            ) {
                $('#@Html.Raw(nameof(NWDAccountSignModifyLoginPassword) + "_Submit")').attr('disabled', false);
            }
            else {
                $('#@Html.Raw(nameof(NWDAccountSignModifyLoginPassword) + "_Submit")').attr('disabled', true);
            }
        }
        $(document).ready(function () {
            $('#@Html.Raw(nameof(NWDAccountSignModifyLoginPassword) + "_Submit")').attr('disabled', true);
            $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordLogin)').keyup(function () { @NWDAccountSignModifyLoginPassword.K_JavaScriptFunction (); })
            $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordPassword)').keyup(function () { @NWDAccountSignModifyLoginPassword.K_JavaScriptFunction (); })
            $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordNewLogin)').keyup(function () { @NWDAccountSignModifyLoginPassword.K_JavaScriptFunction (); })
            $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordNewPassword)').keyup(function () { @NWDAccountSignModifyLoginPassword.K_JavaScriptFunction (); })
            $('#@nameof(NWDAccountSignModifyLoginPassword.AccountSignModifyLoginPasswordNewPasswordConfirm)').keyup(function () { @NWDAccountSignModifyLoginPassword.K_JavaScriptFunction (); })
        });</script>
}