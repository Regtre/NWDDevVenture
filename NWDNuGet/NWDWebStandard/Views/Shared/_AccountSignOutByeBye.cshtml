@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NWDWebRuntime.Configuration
@using NWDWebStandard.Configuration
@using NWDWebStandard.Controllers

@inject IHttpContextAccessor HttpContextAccessor

    <div class="row flex-center min-vh-100 py-6">
        <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
            <div class="card">
                <div class="card-body p-4 p-sm-5">
                    <div class="text-center">
                        <img class="d-block mx-auto mb-4" src="~/iconography/byebye.png" alt="shield" width="100">
                        <h4>See you again!</h4>
                        <p>Thanks for using @NWDWebStandardConfiguration.KConfig.WebSiteShortName. You are now successfully signed out.</p><a class="btn btn-primary btn-sm mt-3" asp-area="" asp-controller="@NWDAccountController.ASP_Controller()" asp-action="@nameof(NWDAccountController.SignInForm)"><span class="fas fa-chevron-left me-1" data-fa-transform="shrink-4 down-1"></span> Return to sign-in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>