@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NWDWebRuntime.Configuration
@using NWDWebRuntime.Tools
@using NWDWebRuntime.Models
@using NWDWebStandard.Configuration
@using NWDWebStandard.Controllers

@inject IHttpContextAccessor HttpContextAccessor

@model NWDAccountSignRescueLogin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (HttpContextAccessor.HttpContext != null)
{
    @using (Html.BeginForm(nameof(NWDAccountController.SignRescue), NWDToolBox.GetController(@HttpContextAccessor.HttpContext)))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden(nameof(NWDAccountSignRescueLogin.AccountSignRescueController), NWDToolBox.GetController(@HttpContextAccessor.HttpContext))
        @Html.Hidden(nameof(NWDAccountSignRescueLogin.AccountSignRescueAction), NWDToolBox.GetAction(@HttpContextAccessor.HttpContext))
        @Html.HiddenFor(m => m.AccountSignRescueEmail, new { @class = "" })
        @Html.HiddenFor(m => m.AccountSignRescueToken, new { @class = "" })
        @Html.HiddenFor(m => m.AccountSignRescueLimit, new { @class = "" })
        <div class="row min-vh-100 flex-center g-0">
            <div class="col-lg-8 py-3 position-relative">
                <img class="bg-auth-circle-shape" src="~/decorations/circles-1.png" alt="" width="250"><img class="bg-auth-circle-shape-2" src="~/decorations/circles-2.png" alt="" width="150">
                <div class="card overflow-hidden z-index-1">
                    <div class="card-body p-0">
                        <div class="row g-0 h-100">
                            <div class="col-md-5 text-center bg-primary">
                                <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                                    <div class="bg-holder bg-primary background-half-circle background-animated">
                                    </div>
                                    <div class="z-index-1 position-relative">
                                        <a class="link-light mb-3 font-sans-serif fs-1 d-inline-block fw-bolder" href="~/index.html">@NWDWebStandardConfiguration.KConfig.WebSiteShortName</a>
                                        <p class="opacity-75 text-white">@NWDWebStandardConfiguration.KConfig.SignHook</p>
                                    </div>
                                </div>
                                <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                                    <p class="pt-3 text-white">Have an account?<br><a class="btn btn-outline-light mt-2 px-4" asp-area="" asp-controller="NWDAccount" asp-action="SignInForm">Sign-in</a></p>
                                    <p class="mb-0 mt-4 mt-md-5 fs--1 fw-semi-bold text-white opacity-75">
                                        Read our <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="TermsOfService">terms of service</a> and <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="TermsAndConditions"> conditions</a>. <br/>
                                        We respect your <a class="text-decoration-underline text-white" asp-area="" asp-controller="NWDPrivacy" asp-action="PrivacyPolicy">privacy </a>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-7 d-flex flex-center">
                                <div class="p-4 p-md-5 flex-grow-1">
                                    <h3>Password rescue</h3>
                                    <p>Need your actual Login</p>
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.AccountSignRescueLogin, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.AccountSignRescueLogin, new { @class = "form-control", @placeholder = "password" })
                                        @Html.ValidationMessageFor(m => m.AccountSignRescueLogin, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    </div>
                                    <p>Reset your password with this form.</p>
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.AccountSignRescuePassword, new { @class = "form-label" })
                                        @Html.PasswordFor(m => m.AccountSignRescuePassword, new { @class = "form-control", @placeholder = "password" })
                                        @Html.ValidationMessageFor(m => m.AccountSignRescuePassword, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    </div>
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.AccountSignRescuePasswordConfirm, new { @class = "form-label" })
                                        @Html.PasswordFor(m => m.AccountSignRescuePasswordConfirm, new { @class = "form-control", @placeholder = "confirm password" })
                                        @Html.ValidationMessageFor(m => m.AccountSignRescuePasswordConfirm, null, new { @class = "hide-if-empty alert alert-warning mt-1 p-3 pt-1 pb-1" }, "div")
                                    </div>

                                    <div class="mb-3">
                                        <button class="btn btn-primary d-block w-100 mt-3" type="submit" id="@nameof(NWDAccountSignRescueLogin)_Submit" name="@nameof(NWDAccountSignRescueLogin)_Submit" disabled>Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
<script>function @NWDAccountSignRescue.K_JavaScriptFunction ()  {
        if ($('#@nameof(NWDAccountSignRescueLogin.AccountSignRescuePassword)').val().length != 0
            && $('#@nameof(NWDAccountSignRescueLogin.AccountSignRescuePasswordConfirm)').val().length != 0
            && $('#@nameof(NWDAccountSignRescueLogin.AccountSignRescueLogin)').val().length != 0
        ) {
            $('#@nameof(NWDAccountSignRescueLogin)_Submit').attr('disabled', false);
        }
        else {
            $('#@nameof(NWDAccountSignRescueLogin)_Submit').attr('disabled', true);
        }
    }
    $(document).ready(function () {
        $('#@nameof(NWDAccountSignRescueLogin)_Submit').attr('disabled', true);
        $('#@nameof(NWDAccountSignRescueLogin.AccountSignRescuePassword)').keyup(function () { @NWDAccountSignRescue.K_JavaScriptFunction () ; });
        $('#@nameof(NWDAccountSignRescueLogin.AccountSignRescuePasswordConfirm)').keyup(function () { @NWDAccountSignRescue.K_JavaScriptFunction () ; });
        
        $('#@nameof(NWDAccountSignRescueLogin.AccountSignRescuePassword)').change(function () { @NWDAccountSignRescue.K_JavaScriptFunction () ; });
        $('#@nameof(NWDAccountSignRescueLogin.AccountSignRescuePasswordConfirm)').change(function () { @NWDAccountSignRescue.K_JavaScriptFunction () ; });
        
        $('#@nameof(NWDAccountSignRescueLogin.AccountSignRescuePassword)').click(function () { @NWDAccountSignRescue.K_JavaScriptFunction () ; });
        $('#@nameof(NWDAccountSignRescueLogin.AccountSignRescuePasswordConfirm)').click(function () { @NWDAccountSignRescue.K_JavaScriptFunction () ; });
        
        @NWDAccountSignRescue.K_JavaScriptFunction () ; 
        setTimeout("@NWDAccountSignRescue.K_JavaScriptFunction ()", "3000");
    });</script>