@using NWDWebUploader.Models
@model NWDWebDownloader.Configuration.NWDDownloadConfig


<div class="modal fade" id="AddCategoryModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content position-relative">
            <div class="position-absolute top-0 end-0 mt-2 me-2 z-index-1">
                <button class="btn-close btn btn-sm btn-circle d-flex flex-center transition-base" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="rounded-top-lg py-3 ps-4 pe-6 bg-light">
                    <h4 class="mb-1" id="modalExampleDemoLabel">Add a new Category </h4>
                </div>
                <div class="p-4 pb-0">
                    <form id="addNewCategoryForm">
                        <div class="input-group mb-3">
                            <span class="input-group-text">@nameof(NWDUploadFile.Category)</span>
                            @Html.TextBox("sNewDirectory",string.Empty ,new { @class = "form-control", placeholder = "Category",id="sNewDirectory" })
                            @Html.Hidden("sRootPath",Model.RootPath)
                            @Html.Hidden("sDownloadPageName",Model.PageName)

                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" type="button" data-bs-dismiss="modal" onclick='sendPost("CategorySelect","@Url.Action("CreateNewDirectory","NWDWebUploader")","addNewCategoryForm")'>Submit</button>
            </div>
        </div>
    </div>
</div>

<script>

function sendPost(contentToreplaceID, url,formID) {
   var cardContent = $('#'+contentToreplaceID);
    cardContent.hide('slow', function() {
        $.post(url,$('#'+formID).serialize(), function (data) {
            cardContent.replaceWith(data);
            cardContent.show('slow');
            $("#sNewCategory").val('');
        });
    });
}
</script>